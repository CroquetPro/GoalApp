<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>
  <label>
    Title
  <input type="text" name="goal[title]" value="<%= @goal.title %>">
  </label>

  <label>
    Description
  <textarea name="goal[description]"
            rows="8"
            cols="40">
            <%= @goal.description %></textarea>
  </label>

  <label>
    Privacy
    <label>
      <input type="radio" name="goal[privacy]" value="Public">
      Public
    </label>

    <label>
      Private
      <input type="radio" name="goal[privacy]" value="Private">
    </label>
  </label>

  <input type="submit" value="Submit">
</form>
